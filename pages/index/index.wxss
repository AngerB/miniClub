/**index.wxss**/
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding-top:40rpx;
  box-sizing: border-box;
  /*border: 1px solid red;*/
} 
.btnContainer{
  display:flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
  width:76vw;
  height:auto;

}
.clubBtn{
box-sizing:border-box;
font-size:32rpx;
text-align:center;
text-decoration:none;
line-height:2.55555556;
border-radius:5px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000000;
background-color:#F8F8F8;
box-shadow: 0 4rpx 4rpx grey;
width:37vw;
height:auto;


}
.clubChecked{
  background-color: #80766a;
    color:#fff;
}
button{
  width:37vw;
height:8vh;
}

.divider {
height:20rpx;
box-shadow:inset 0 6rpx 2rpx grey;
width:100vw;
margin-top:1vh;

}
.clubContainer{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: nowrap;
    width:100vw;
    height:auto;
}
.clubItem{
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    width:100vw;
    margin: 20rpx;
}
.clubImg{
    width:36vw;
    height:18vh;
    margin-right: 4vw;
    margin-left:2rpx;
}
image{
    width:35vw;
    height:17vh;
}
.theme{
    font-size:32rpx;
}
.location{
    font-size:26rpx;
}
.recordInfo{
    font-size:28rpx;
}
.recordDes{
    background-color: gainsboro;
    width:40vw;
}
.myClub{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:80vw;
  height:80vh;

}
.tipContainer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tips{
  margin:2vh;
}
.tipContainer .main{
  font-weight:500;

}
.tipContainer .second{
  font-size: 30rpx;
  color: grey;
}
.tipContainer button{
  background-color: rgb(97, 235, 111) ;
  color:white;
}
